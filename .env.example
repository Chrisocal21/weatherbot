# Discord Bot Token
DISCORD_TOKEN=your_bot_token_here

# OpenWeather API Key (get from https://openweathermap.org/api)
OPENWEATHER_API_KEY=your_openweather_key_here

# Channel ID where daily weather will be posted
WEATHER_CHANNEL_ID=channel_id_for_daily_posts

# Time for daily weather post (24-hour format, e.g., 07:00)
WEATHER_POST_TIME=07:00

# Default cities (optional, pipe-separated: City,State|City,Country)
DEFAULT_CITIES=San Diego,CA|Tokyo,Japan
